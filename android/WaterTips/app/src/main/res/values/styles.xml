<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="label_text">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="label_title_text" parent="label_text">
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="label_subtitle_text" parent="label_text">
        <item name="android:textSize">14dp</item>
    </style>

    <style name="radio_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
    </style>


    <!-- Settings -->

    <style name="settings_row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:weightSum">4</item>
    </style>

    <style name="settings_cell">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="settings_field" parent="settings_cell">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="settings_title" parent="settings_cell">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">2</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18dp</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="row">
        <item name="android:background">@color/white</item>
    </style>

    <style name="arduino_cell">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/arduino_row_height</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="arduino_cell_header" parent="arduino_cell">
        <!--
        <item name="android:background">@drawable/table_cell_bg_header</item>-->
        <item name="android:background">@color/cell_bg_header_odd</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/black</item>

        <item name="android:padding">1dp</item>
    </style>
    <style name="arduino_cell_header_even" parent="arduino_cell">
        <!--
        <item name="android:background">@drawable/table_cell_bg_header</item>-->
        <item name="android:background">@color/cell_bg_header_even</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/black</item>

        <item name="android:padding">1dp</item>
    </style>


    <style name="tips_cell">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/arduino_row_height</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="tips_cell_header" parent="arduino_cell">
        <item name="android:background">@drawable/table_cell_bg_odd</item>
        <item name="android:layout_height">match_parent</item>
        <!--<item name="android:padding">1dp</item>-->
    </style>

    <style name="lf_cell">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/arduino_row_height</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="lf_cell_header" parent="arduino_cell">
        <item name="android:background">@drawable/table_cell_bg_odd</item>
        <item name="android:layout_height">match_parent</item>
        <!--<item name="android:padding">1dp</item>-->
    </style>
    <style name="lf_cell_header_odd" parent="arduino_cell_header"/>
    <style name="lf_cell_header_even" parent="arduino_cell_header_even"/>




</resources>
