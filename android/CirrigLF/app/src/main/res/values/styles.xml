<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="radio_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
    </style>

    <style name="seg_ctrl" parent="radio_button">
        <item name="android:textSize">22dp</item>
        <item name="android:textColor">@color/seg_ctrl_text_color_selector</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- About -->

    <style name="about_radio_button" parent="radio_button">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/seg_ctrl_text_color_selector</item>
        <item name="android:background">@drawable/about_seg_ctrl_selector</item>
    </style>

    <style name="row">
        <item name="android:background">@color/grey</item>
    </style>

    <style name="fixed_row" parent="row">
        <item name="android:layout_height">@dimen/row_height</item>
    </style>

    <style name="valve_cell">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/row_height</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">1dp</item>
    </style>

    <style name="valve_cell_header" parent="valve_cell">
        <item name="android:background">@drawable/table_cell_bg_odd</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="valve_cell_odd" parent="valve_cell">
        <item name="android:background">@drawable/table_cell_bg_odd</item>
    </style>

    <style name="valve_cell_even" parent="valve_cell">
        <item name="android:background">@drawable/table_cell_bg_even</item>
    </style>

    <style name="nav_button" parent="radio_button">
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/nav_button_text_color_selector</item>
        <item name="android:gravity">bottom|center_horizontal</item>
        <item name="android:layout_marginTop">6dp</item>
    </style>
</resources>
