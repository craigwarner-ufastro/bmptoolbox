<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background"
    >

    <RadioGroup
        android:id="@+id/info_buttons"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_margin="14dp"
        >

        <RadioButton
            style="@style/about_radio_button"
            android:id="@+id/info_about"
            android:text="About" />

        <RadioButton
            style="@style/about_radio_button"
            android:id="@+id/info_concepts"
            android:text="Concepts" />

        <RadioButton
            style="@style/about_radio_button"
            android:id="@+id/info_changelog"
            android:text="Log" />

        <RadioButton
            style="@style/about_radio_button"
            android:id="@+id/info_disclaimer"
            android:text="Disclaimer" />

    </RadioGroup>

    <WebView
        android:id="@+id/info_web"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/info_buttons"
        android:layout_above="@+id/info_ret" />

    <Button
        android:id="@+id/info_ret"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:background="#00000000"
        android:textSize="18dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:text="Return to C-Irrig" />

</RelativeLayout>
