<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="label_text">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="label_title_text" parent="label_text">
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="label_subtitle_text" parent="label_text">
        <item name="android:textSize">14dp</item>
    </style>

    <style name="radio_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
    </style>

    <style name="seg_ctrl" parent="radio_button">
        <item name="android:textSize">22dp</item>
        <item name="android:textColor">@color/seg_ctrl_text_color_selector</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="nav_button" parent="radio_button">
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/nav_button_text_color_selector</item>
        <item name="android:gravity">bottom|center_horizontal</item>
        <item name="android:layout_marginTop">6dp</item>
    </style>

    <style name="field">
        <item name="android:layout_height">@dimen/default_widget_height</item>
        <item name="android:layout_width">90dp</item>
        <item name="android:background">@drawable/field_background</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="irrig_capture_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@null</item>
        <item name="android:button">@null</item>
    </style>

    <style name="row">
        <item name="android:background">@color/grey</item>
    </style>

    <style name="fixed_row" parent="row">
        <item name="android:layout_height">@dimen/irrig_row_height</item>
    </style>

    <style name="irrig_cell">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/irrig_row_height</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">1dp</item>
    </style>

    <style name="irrig_cell_odd" parent="irrig_cell">
        <item name="android:background">@drawable/table_cell_bg_odd</item>
    </style>

    <style name="irrig_cell_even" parent="irrig_cell">
        <item name="android:background">@drawable/table_cell_bg_even</item>
    </style>

    <style name="coords_cell">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/weather_row_height</item>
        <item name="android:textSize">14dp</item>
	<item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">1dp</item>
    </style>

    <style name="coords_cell_header" parent="coords_cell">
        <item name="android:background">@color/black</item>
	<item name="android:textColor">@color/white</item>
        <item name="android:layout_height">match_parent</item>
        <!--<item name="android:padding">1dp</item>-->
    </style>


    <!-- Weather -->


    <style name="weather_cell">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/weather_row_height</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="weather_cell_header" parent="weather_cell">
        <item name="android:background">@drawable/table_cell_bg_odd</item>
        <item name="android:layout_height">match_parent</item>
        <!--<item name="android:padding">1dp</item>-->
    </style>

    <style name="weather_cell_header_runtime" parent="weather_cell_header">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="weather_cell_24hrs" parent="weather_cell_odd">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="weather_cell_24hrs_runtime" parent="weather_cell_24hrs">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="weather_cell_override" parent="weather_cell_even">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="weather_cell_override_runtime" parent="weather_cell_override">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="weather_cell_odd" parent="weather_cell">
        <item name="android:background">@drawable/table_cell_bg_odd</item>
    </style>

    <style name="weather_cell_odd_runtime" parent="weather_cell_odd">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="weather_cell_odd_date" parent="weather_cell_odd">
        <item name="android:textSize">13dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="weather_cell_even" parent="weather_cell">
        <item name="android:background">@drawable/table_cell_bg_even</item>
    </style>

    <style name="weather_cell_even_runtime" parent="weather_cell_even">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="weather_cell_even_date" parent="weather_cell_even">
        <item name="android:textSize">13dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- Settings -->

    <style name="settings_row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:weightSum">4</item>
    </style>

    <style name="settings_cell">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="settings_field" parent="settings_cell">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/settings_cell_margin</item>
        <item name="android:background">@drawable/field_background</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="settings_title" parent="settings_cell">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">2</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18dp</item>
        <item name="android:singleLine">false</item>
    </style>

    <!-- About -->

    <style name="about_radio_button" parent="radio_button">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/seg_ctrl_text_color_selector</item>
        <item name="android:background">@drawable/about_seg_ctrl_selector</item>
    </style>


</resources>
